# ============================================
# Employee ID Registration System
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# BytePlus Seedream API (AI Headshot Generation)
# ============================================
BYTEPLUS_API_KEY=your_byteplus_api_key_here
BYTEPLUS_MODEL=seedream-4-5-251128
BYTEPLUS_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/images/generations

# ============================================
# Cloudinary (Image Storage & Background Removal)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# Remove.bg API (Alternative Background Removal)
# ============================================
REMOVEBG_API_KEY=your_removebg_api_key

# ============================================
# Google Sheets Integration (Optional)
# ============================================
# Path to service account JSON file for Google Sheets sync
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/service-account.json
GOOGLE_SPREADSHEET_ID=your_google_spreadsheet_id

# ============================================
# Lark/Feishu Integration (Optional)
# ============================================
LARK_APP_ID=your_lark_app_id
LARK_APP_SECRET=your_lark_app_secret
LARK_APP_TOKEN=your_lark_bitable_app_token
LARK_TABLE_ID=your_lark_table_id

# ============================================
# HR Dashboard Authentication
# ============================================
# Format: username1:password1,username2:password2
# Passwords are bcrypt hashed internally on first login
HR_USERS=admin:admin123,hr:hr123456

# ============================================
# Application Settings
# ============================================
# Set to 'development' for local testing, 'production' for deployment
ENVIRONMENT=development
DEBUG=false
